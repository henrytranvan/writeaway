{
  "name": "redaxtor",
  "version": "2.0.0",
  "description": "Redaxtor is a JavaScript library for editing CMS pieces, pages and internationalisation on the client side.",
  "main": "./lib/core.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redaxtor/redaxtor.git"
  },
  "scripts": {
    "clean": "rimraf lib dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "build": "npm run build:prod",
    "build:prod": "cross-env NODE_ENV=production webpack",
    "build:dev": "cross-env NODE_ENV=development webpack",
    "watch": "cross-env NODE_ENV=development webpack --watch",
    "pre-publish": "npm run clean && npm run lint && npm run build"
  },
  "author": "SpiralScout",
  "license": "MIT",
  "dependencies": {
    "@types/classnames": "^2.2.10",
    "@types/react-redux": "^7.1.9",
    "@types/react-redux-toastr": "^7.6.0",
    "autobind-decorator": "^2.4.0",
    "classnames": "^2.2.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-redux-toastr": "^7.6.5",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8"
  }
}
