{
  "name": "redaxtor",
  "version": "0.3.0",
  "description": "Redaxtor is a JavaScript library for editing CMS pieces, pages and internationalisation on the client side.",
  "main": "./lib/index.js",
  "types": "./src/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redaxtor/redaxtor.git"
  },
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "lint": "eslint src test examples build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check:src": "npm run lint",
    "build:less": "npm run build:less:commonjs && npm run build:less:umd && npm run build:less:umd:min",
    "build:less:commonjs": "lessc --source-map src/styles/redaxtor.less lib/redaxtor.css",
    "build:less:umd": "lessc --source-map src/styles/redaxtor.less dist/redaxtor.css",
    "build:less:umd:min": "lessc --compress --source-map src/styles/redaxtor.less dist/redaxtor.min.css",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "cross-env NODE_ENV=development webpack src/index.js dist/redaxtor.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack src/index.js dist/redaxtor.min.js",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min && npm run build:less",
    "prepublish": "npm run clean && npm run check:src && npm run build"
  },
  "author": "SpiralScout",
  "license": "MIT",
  "dependencies": {
    "material-ui": "^0.15.0-alpha.2",
    "react": "^15.0.0-rc || ^15.0.0",
    "react-addons-shallow-compare": "^15.4.1",
    "react-dom": "^15.0.0-rc || ^15.0.0",
    "react-portal": "^3.0.0",
    "react-redux": "^4.4.6",
    "react-redux-toastr": "^3.0.8",
    "react-tap-event-plugin": "^0.2.2",
    "react-toggle": "^2.2.0",
    "redux": "^3.3.1",
    "redux-devtools-extension": "^1.0.0",
    "redux-thunk": "^2.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel": "^6.5.2",
    "babel-cli": "^6.6.5",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-plugin-transform-dev-warning": "^0.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "classnames": "^2.2.3",
    "cross-env": "^1.0.7",
    "css-loader": "^0.26.1",
    "eslint": "^2.4.0",
    "eslint-plugin-react": "^4.2.3",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "postcss": "^5.0.19",
    "postcss-loader": "^0.8.2",
    "react-modal": "^1.1.0",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.12.14"
  }
}
